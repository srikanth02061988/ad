import static org.junit.jupiter.api.Assertions.*;
import static org.mockito.Mockito.*;

import com.microsoft.azure.functions.ExecutionContext;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.junit.jupiter.api.extension.ExtendWith;
import org.mockito.junit.jupiter.MockitoExtension;

@ExtendWith(MockitoExtension.class)
class BlobStorageTriggerFunctionTest {

    private ExecutionContext context;
    private BlobStorageTriggerFunction function;

    @BeforeEach
    void setUp() {
        context = mock(ExecutionContext.class);
        function = new BlobStorageTriggerFunction();
        // Additional setup for Azure storage mocks could be done here
    }

    @Test
    void testBlobTriggerInvocation() {
        // Arrange
        String expectedLogMessage = "blob Created:";
        String blobContent = "This is a test blob content.";
        String blobName = "test-blob.txt";

        // Act
        function.run(blobContent, blobName, context);

        // Assert
        verify(context).getLogger();
        verify(context.getLogger()).info(contains(expectedLogMessage + blobName));

        // Optionally, assert that no exceptions were thrown
        assertDoesNotThrow(() -> function.run(blobContent, blobName, context));
    }
}
